<% unless flash and flash.nil? or flash.length == 0 %>
  <h1><%= flash %></h1>
<% end %>
<form action='/login' method="POST">
  <h1>Enter your name, user: </h1>
  <input name="user" type='text' placeholder='Username' value="<%= user unless user.nil? or user.length == 0 %>"/>
  <input name="password" type='password' placeholder='Password'/>
  <input type="submit" value="LOGIN ME"/>
</form>
<a href='/signup'>Not a member, yet.</a>